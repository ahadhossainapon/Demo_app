
<div class="row">
  <div class="col-lg-6">
    <div class="card-box">
      <%= form_for @teacher do |form| %>
          <% if @teacher.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>
                <ul>
                  <% @teacher.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          <div class="form-group">
            <label for="userName">Name:</label>
            <%= form.text_field :name, id: :teacher_name, class:"form-control", placeholder:"Enter name" %>
          </div>
          <div class="form-group">
            <label for="emailAddress">Address*</label>
            <%= form.text_field :address, id: :address, class:"form-control", placeholder:"Enter Address" %>
          </div>
          <div class="form-group">
            <label for="pass1">Phone No*</label>
            <%= form.text_field :phone, id: :phone, class:"form-control", placeholder:"Enter Phone No" %>
          </div>
          <div class="form-group">
            <label for="emailAddress">Email address*</label>
            <%= form.text_field :email, id: :email , type: "email" , class:"form-control", placeholder:"Enter email"%>
          </div>
          <div class="form-group text-right m-b-0">
            <%= form.submit "submit",  class: "btn btn-primary " %>
          </div>
      <% end %>
    </div>
  </div>
</div>